<Page
    x:Class="AnimateRaw.View.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AnimateRaw.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="MediumVioletRed" Padding="16">
            <TextBlock Text="About" Style="{ThemeResource TitleTextBlockStyle}" Foreground="White"/>
        </Border>
        <StackPanel Padding="16" Grid.Row="1">
            <TextBlock Text="Thanks" FontSize="75"/>
            <TextBlock Text="That's all" Padding="8"/>
            <Button Content="GitHub" Click="Button_Click" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Page>
