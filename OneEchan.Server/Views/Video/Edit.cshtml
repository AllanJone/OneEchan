@model Video
@inject IStringLocalizer<CloudscribeCore> sr
@{ 
    ViewData["Title"] = $"Edit {Model.Name}";
}
<form asp-controller="Video" asp-action="Edit" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label">@sr["Name"]</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label">@sr["Description"]</label>
        <div id="editormd">
            <textarea asp-for="Description" style="display:none;"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AllowComment" class="col-md-2 control-label">Allow Comment</label>
        <div>
            <input asp-for="AllowComment" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">@sr["Edit"]</button>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/editor.md/editormd.min.js"></script>
    <script type="text/javascript">
            $(function () {
                var editor = editormd("editormd", {
                    path: "../lib/" 
                });
            });
    </script>
}

@section Styles {
    <link href="~/lib/editor.md/css/editormd.min.css" rel="stylesheet" />
}